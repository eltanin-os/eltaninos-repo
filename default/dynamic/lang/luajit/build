#!/bin/execlineb -P
multisubstitute {
	importas -i DESTDIR DESTDIR
	importas -i PREFIX PREFIX
	importas -i BINDIR BINDIR
	importas -i DRTDIR DRTDIR
	importas -i INCDIR INCDIR
	importas -i LIBDIR LIBDIR
}
define DEST_PREFIX "${DESTDIR}${PREFIX}"
export ARBOR_MK_GMAKE_FLAGS "TARGET_FLAGS=-DLUAJIT_UNWIND_EXTERNAL;PREFIX=${PREFIX};INSTALL_BIN=${DEST_PREFIX}${BINDIR};INSTALL_LIB=${DEST_PREFIX}${LIBDIR};INSTALL_SHARE=${DEST_PREFIX}${DRTDIR};INSTALL_DEFINC=${DEST_PREFIX}${INCDIR}/luajit-2.1"
arbor-mk-gmake install
